    <decisions>
        <name>Is_Record_Owner_Title_Contain_Regional_or_Director</name>
        <label>Is Record Owner Title Contain Regional or Director</label>
        <locationX>578</locationX>
        <locationY>695</locationY>
        <defaultConnector>
            <targetReference>Chatter_for_owner_and_manager</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Title</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Owner:User.Title</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Regional</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Owner:User.Title</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Director</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Chatter_to_record_Owner</targetReference>
            </connector>
            <label>Yes Title</label>
        </rules>
        <rules>
            <name>No_and_Manager_field_is_blank</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Owner:User.ManagerId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Chatter_to_Reimbursement_Owner</targetReference>
            </connector>
            <label>No and Manager field is blank</label>
        </rules>
    </decisions>
