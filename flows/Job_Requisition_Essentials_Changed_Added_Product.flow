    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Was_JRE_Created_Edited</targetReference>
        </connector>
        <object>Job_Requisition_Essentials__c</object>
