    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Extension_Opportunity_to_Closed_Won</targetReference>
        </connector>
        <filterLogic>1 and 3 and (2 or 4)</filterLogic>
        <filters>
            <field>Status</field>
