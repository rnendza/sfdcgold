<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignments>
        <description>Assign all Variables for the Resource Absence the flow is about to create.</description>
        <name>Assign_Resource_Absence</name>
        <label>Assign Resource Absence</label>
        <locationX>722</locationX>
        <locationY>395</locationY>
        <assignmentItems>
            <assignToReference>ResourceAbsence.Start</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Flow.CurrentDateTime</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ResourceAbsence.ResourceId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>ServiceResource.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ResourceAbsence.Type</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Break</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ResourceAbsence.End</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Add30Min</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ResourceAbsence.FSL__Approved__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ResourceAbsence.RecordTypeId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>RARecordType.Id</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Create_Resource_Absence</targetReference>
        </connector>
    </assignments>
    <description>Mobile flow for a Service Resource to begin their break.</description>
    <formulas>
        <description>Add 30 min to the current time</description>
        <name>Add30Min</name>
        <dataType>DateTime</dataType>
        <expression>{!$Flow.CurrentDateTime} + (30/24/60)</expression>
    </formulas>
    <interviewLabel>Service Resource - Resource Absence Creation (Break) {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Service Resource - Resource Absence Creation (Break)</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>FieldServiceMobile</processType>
    <recordCreates>
        <description>Create the record for a resource absence, indicating that the Service Resource is on a break.</description>
        <name>Create_Resource_Absence</name>
        <label>Create Resource Absence</label>
        <locationX>622</locationX>
        <locationY>524</locationY>
        <connector>
            <targetReference>Success_Screen</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Error_Screen</targetReference>
        </faultConnector>
        <inputReference>ResourceAbsence</inputReference>
    </recordCreates>
    <recordLookups>
        <name>Get_RA_Record_Type</name>
        <label>Get RA Record Type</label>
        <locationX>610</locationX>
        <locationY>325</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Assign_Resource_Absence</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Error_Screen</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>SobjectType</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>ResourceAbsence</stringValue>
            </value>
        </filters>
        <filters>
            <field>DeveloperName</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Non_Availability</stringValue>
            </value>
        </filters>
        <object>RecordType</object>
        <outputReference>RARecordType</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordLookups>
        <description>Get the Service Resource that started the quick action.</description>
        <name>Get_Service_Resource</name>
        <label>Get_Service_Resource</label>
        <locationX>658</locationX>
        <locationY>204</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Get_RA_Record_Type</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Error_Screen</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>RelatedRecordId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>UserId</elementReference>
            </value>
        </filters>
        <object>ServiceResource</object>
        <outputReference>ServiceResource</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Name</queriedFields>
    </recordLookups>
    <screens>
        <description>Error screen if any errors happen on queries within the flow.</description>
        <name>Error_Screen</name>
        <label>Error Screen</label>
        <locationX>988</locationX>
        <locationY>361</locationY>
        <allowBack>true</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>true</allowPause>
        <fields>
            <name>ErrorMessage</name>
            <fieldText>&lt;p&gt;An error has occurred and your break was not activated.&lt;/p&gt;&lt;p&gt;Please send this message to your Salesforce Administrator:&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;{!$Flow.FaultMessage}&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>
    <screens>
        <description>Success screen for the user to know the flow created their break.</description>
        <name>Success_Screen</name>
        <label>Success Screen</label>
        <locationX>720</locationX>
        <locationY>660</locationY>
        <allowBack>true</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>true</allowPause>
        <fields>
            <name>SuccessMessage</name>
            <fieldText>&lt;p&gt;Congrats {!ServiceResource.Name}!&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;You have created a break for 30 Minutes.&lt;/p&gt;&lt;p&gt;Your Break started at: {!ResourceAbsence.Start}&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>
    <start>
        <locationX>577</locationX>
        <locationY>52</locationY>
        <connector>
            <targetReference>Get_Service_Resource</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <name>RA_RecordType_Id</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
