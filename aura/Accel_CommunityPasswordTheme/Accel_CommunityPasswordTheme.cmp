<aura:component implements="forceCommunity:themeLayout" access="global" description="Accel_CommunityPasswordThemeLayout">

    <aura:attribute name="backgroundImage" type="String" default="{!$Resource.loginbackground}"/>

    <div >
        <div class="slds-grid   slds-grid_align-spread accel-community-header">
            <div class="slds-col slds-size_2-of-6">
                <div class="accel-logo-container">
                    <img class="accel-logo-img" src="{!$Resource.Accel_Community_Logo}"/>
                </div>
            </div>
        </div>
        <div class="outerContent" style="{!'background-image:url('+v.backgroundImage+')'}">
            <div class="formContent">
                {!v.body}
            </div>
        </div>
    </div>
</aura:component>