    <description>Permission set to allow user to switch from Classic view to Lightning view</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Enable Lightning View</label>
    <userPermissions>
        <enabled>true</enabled>
        <name>LightningExperienceUser</name>
    </userPermissions>
</PermissionSet>
